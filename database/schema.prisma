datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model client {
  id            Int      @id @default(autoincrement())
  client_number BigInt   @unique @db.BigInt
  name          String   @db.VarChar(100)
  address       String   @db.VarChar(100)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  bill          bill[]
}

model bill {
  id                    Int      @id @default(autoincrement())
  client_number         BigInt
  client                client   @relation(references: [client_number], fields: [client_number])
  expiration_date       DateTime @db.Date
  reference             DateTime @db.Date
  energy_unit           String
  energy_price          Int
  energy_amount         Int
  energy_send_unit      Int
  energy_send_price     Int
  energy_send_amount    Int
  contribution_lighting Int
  amount                Int
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}
